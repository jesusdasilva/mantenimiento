{# ELEMENTOS DEL FORMULARIO #}

{#INPUT TEXT#}
{% macro inputText(label,name,value, editar = FALSE, helpBlock = '') %}
<div class="form-group">
  <label>{{ label }}</label>
  <input required id="{{ name }}" name="{{ name }}" class="form-control" type="text"  value="{{ value }}"  maxlength="50" {% if editar == TRUE %} disabled {% endif %} >
  <p class="help-block">{{ helpBlock }}</p>
</div>
{% endmacro %}

{#INPUT TEXTAREA#}
{% macro inputTextArea(label,name,value, editar = FALSE, helpBlock = '') %}
<div class="form-group">
  <label>{{ label }}</label>
  <textarea id="{{ name }}" name="{{ name }}" class="form-control" rows="3">{{ value }}</textarea>
  <p class="help-block">{{ helpBlock }}</p>
</div>
{% endmacro %}

{#INPUT HIDDEN#}
{% macro inputHidden(name,value) %}
<input type="hidden" name="{{ name }}" id="{{ name }}" value="{{ value }}" />
{% endmacro %}

{#SELECT#}
{% macro select(label,name,catalogo,campoId,campoNombre,registroSelected = '') %}
<div class="form-group">
  <label>{{ label }}</label>
  <select id="{{ name }}" name="{{ name }}" class="form-control">
    {% for valor in catalogo %}
      <option  value="{{ valor['campoId'] }}" {% if (registroSelected |default('1')) ==  valor['campoId']  %} selected {% endif %}>
        {{ valor['campoNombre'] }}
      </option>
    {% endfor %}
  </select>
</div>
{% endmacro %}

{#DATA TABLE MOSTRANDO SÓLO EL NOMBRE DEL CAMPO#}
{% macro dataTable(tituloListado,nombreItem,campos,campoNombre,campoId,moduloBuscar,moduloEliminar) %}
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">{{tituloListado}}</div> {#TITULO DE LA TABLA#}
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
              <tr>{#CABECERA DE LOS CAMPOS DE LA TABLA#}
                <th>Item</th>
                <th>{{nombreItem}}</th>
                <th>Acción</th>
              </tr>
            </thead>
            <tfoot>{#PIE DE LA TABLA#}
              <tr>
                <th>Item</th>
                <th>{{nombreItem}}</th>
                <th>Acción</th>
              </tr>
            </tfoot>
            <tbody>
            {% for registro in campos %}
              <tr>
                <td>{{ loop.index }}</td>{#ITEM#}
                <td>{{ registro[campoNombre] }}</td>{#NOMBRE#}
                <td>{#ACCIÓN#}
                  <a href="{{ app.url_generator.generate(moduloBuscar,{id:registro[campoId]}) }}">
                    <button type="button" class="btn btn-default btn-xs">
                    <span class="glyphicon glyphicon-edit"></span>Modificar</button>
                  </a>
                  <a href="{{ app.url_generator.generate(moduloEliminar, {id: registro[campoId]}) }}" onclick="return confirm_delete();">
                    <button type="button" class="btn btn-default btn-xs">
                    <span class="glyphicon glyphicon-trash"></span>Eliminar</button>
                  </a>
                </td>
              </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>{#/.dataTable_wrapper#}
    </div>{#/.panel-body#}
  </div>{#/.panel#}
</div>{#/.col-lg-12#}
</div>{#/.row#}
{% endmacro %}

{#SELECT SO#}
{% macro selectSO() %}
<div class="form-group">
<div class="bs-docs-example">
  <select id="equipo-so" name="equipo-so" class="selectpicker">
    <option data-icon="fa fa-windows" value="Windows XP 32bits">&nbsp;Windows XP 32 Bits</option>
    <option data-icon="fa fa-windows" value="Windows XP 64bits">&nbsp;Windows XP 64 Bits</option>
    <option data-icon="fa fa-windows" value="Windows 7 64bits">&nbsp;Windows 7 64 Bits</option>
    <option data-icon="fa fa-linux"   value="Linux">&nbsp;Linux</option>
    <option data-icon="fa fa-sun-o"   value="Solaris">&nbsp;Solaris</option>
  </select>
  <p class="help-block">Selecciones el Sistema Operativo</p>
</div>
</div>
{% endmacro %}
