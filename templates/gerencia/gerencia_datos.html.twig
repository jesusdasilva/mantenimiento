{# GERENCIA  DATOS #}

{% extends  "layout_app.html.twig" %}

{% block contenido_app %}

{#MODIFICAR O NUEVO#}
  {% if editar == TRUE %}
    {% set tituloAccion = 'Modificar Gerencia' %}
    {% set controlador  = 'gerenciaGuardarActualizar' %}
  {% else %}
    {% set tituloAccion = 'Nueva Gerencia' %}
    {% set controlador  = 'gerenciaGuardarNuevo' %}
  {% endif %}
{#TITULO DEL FORMULARIO#}
  {% set tituloFormulario = 'Datos de la gerencia' %}
{#CAMPOS OCULTOS#}
  {% set idH       = 'gerencia-id' %}
  {% set idValueH  =  gerencia_id|default('') %}
  {% set nombreH       = 'gerencia-nombre-h' %}
  {% set nombreValueH  =  gerencia_nombre|default('') %}
{#CAMPOS DEL FORMULARIO#}
  {% set nombreLabel = 'Nombre' %}
  {% set nombreTag   = 'gerencia-nombre' %}
  {% set nombreValue =  gerencia_nombre|default('') %}
  {% set nombreHelp  = 'Introduzca el nombre de la Gerencia.' %}
  {% set observacionLabel = 'Observaciones' %}
  {% set observacionTag   = 'gerencia-observacion' %}
  {% set observacionValue =  gerencia_observacion|default('') %}
  {% set observacionHelp  = 'Introduzca cualquier observacion.' %}
{#PLANTILLA BASE DATOS#}
  {% include 'plantilla_datos.html.twig' %}

{% endblock %}
