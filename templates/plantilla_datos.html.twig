{# PLANTILLA BASE PARA LOS DATOS
 # CON LOS CAMPOS NOMBRE Y OBSERVACIÓN
 # QUE SIRVE PARA SE UTILIZADO EN VARIOS MÓDULOS
 # CON LOS MISMOS CAMPOS
 #}

{#MACROS#}
{% import "form.html.twig" as form %}

{#FORMULARIO#}
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">{{tituloAccion}}</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          {{tituloFormulario}}
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
              <form role="form" action="{{ app.url_generator.generate(controlador) }}" method="post">
                {#CAMPOS OCULTOS#}
                {{ form.inputHidden(idH,idValueH) }}
                {{ form.inputHidden(nombreH,nombreValueH) }}
                {#MENSAJE ALERTA#}
                {% include 'mensaje_alerta.html.twig' %}
                {# NOMBRE #}
                {{ form.inputText(nombreLabel,nombreTag,nombreValue,editar,nombreHelp) }}
                {# OBSERVACIONES #}
                {{ form.inputTextArea(observacionLabel,observacionTag,observacionValue,editar,observacionHelp) }}
                <button type="submit" class="btn btn-primary">Guardar</button>
              </form>
            </div>
            <!-- /.col-lg-6 -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->
