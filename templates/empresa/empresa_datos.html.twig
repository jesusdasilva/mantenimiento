{# EMPRESA  DATOS #}
{% extends "layout_app.html.twig" %}
{% block contenido_app %}
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
{% if editar == TRUE  %}
      <h1 class="page-header">Modificar Empresa</h1>
{% else %}
      <h1 class="page-header">Nueva Empresa</h1>
{% endif %}
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Datos de la Empresa
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
{% if editar == TRUE  %}
              <form role="form" action="{{ app.url_generator.generate('empresaGuardarActualizar') }}" method="post">
                <input type="hidden" name="empresa-id" id="empresa-id" value="{{ empresa_id }}" />
                <input type="hidden" name="empresa-nombre-h" id="empresa-nombre-h" value="{{ empresa_nombre }}" />
{% else %}
              <form role="form" action="{{ app.url_generator.generate('empresaGuardarNuevo') }}" method="post">
{% endif %}
{#MENSAJE ALERT#}
{% include 'mensaje_alerta.html.twig' %}
{# NOMBRE #}
                <div class="form-group">
                  <label>Nombre</label>
                  <input required id="empresa-nombre" name="empresa-nombre" class="form-control" type="text" {% if editar == TRUE %} disabled {% endif %} value="{{ empresa_nombre|default('') }}"   maxlength="20">
                  <p class="help-block">Introduzca el nombre de la Empresa.</p>
                </div>
{# /NOMBRE #}
{# OBSERVACIONES #}
                <div class="form-group">
                  <label>Observaciones</label>
                  <textarea id="empresa-observacion" name="empresa-observacion" class="form-control" rows="3">{{ empresa_observacion|default('')  }}</textarea>
                </div>
{# /OBSERVACIONES #}
                <button type="submit" class="btn btn-primary">Guardar</button>
              </form>
            </div>
            <!-- /.col-lg-6 -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->
{% endblock %}
