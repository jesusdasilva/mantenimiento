{# EMPRESA  DATOS #}

{% extends  "layout_app.html.twig" %}

{% block contenido_app %}

{#MODIFICAR O NUEVO#}
  {% if editar == TRUE %}
    {% set tituloAccion = 'Modificar Empresa' %}
    {% set controlador  = 'empresaGuardarActualizar' %}
  {% else %}
    {% set tituloAccion = 'Nueva Empresa' %}
    {% set controlador  = 'empresaGuardarNuevo' %}
  {% endif %}
{#TITULO DEL FORMULARIO#}
  {% set tituloFormulario = 'Datos de la Empresa' %}
{#CAMPOS OCULTOS#}
  {% set idH       = 'empresa-id' %}
  {% set idValueH  =  empresaid|default('') %}
  {% set nombreH       = 'empresa-nombre-h' %}
  {% set nombreValueH  =  empresa_nombre|default('') %}
{#CAMPOS DEL FORMULARIO#}
  {% set nombreLabel = 'Nombre' %}
  {% set nombreTag   = 'empresa-nombre' %}
  {% set nombreValue =  empresa_nombre|default('') %}
  {% set nombreHelp  = 'Introduzca el nombre de la Empresa.' %}
  {% set observacionLabel = 'Observaciones' %}
  {% set observacionTag   = 'empresa-observacion' %}
  {% set observacionValue =  empresa_observacion|default('') %}
  {% set observacionHelp  = 'Introduzca cualquier observacion.' %}
{#PLANTILLA BASE DATOS#}
  {% include 'plantilla_datos.html.twig' %}

{% endblock %}
