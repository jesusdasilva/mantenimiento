{% extends "layout_app.html.twig" %}

{#MACROS#}
{% import "form.html.twig" as form %}

{% block contenido_app %}
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Nuevo Equipo</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Tipo de Mantenimiento a realizar
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6">
              <form role="form" action="" method="post">
                {# NOMBRE #}
                {{ form.inputText('Nombre del Equipo','equipo-nombre','',FALSE,'Introduzca el nombre del equipo') }}
                {#SELECT SO#}
                {{ form.selectSO() }}
                <button type="submit" class="btn btn-primary">Crear</button>
              </form>
            </div>
            <!-- /.col-lg-6 -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->
{% endblock %}
