{#EQUIPO NUEVO CREAR MANTENIMIENTO#}
{% extends "layout_app.html.twig" %}

{#MACROS#}
{% import "form.html.twig" as form %}

{% block contenido_app %}

{#FORMULARIO#}
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Nuevo Equipo</h1>
    </div>{#/.col-lg-12#}
  </div>{#/.row#}
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Control del Mantenimiento
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <form role="form" action="" method="post">
                {#NAV TABS#}
                <ul class="nav nav-tabs">
                  <li class="active">
                    <a href="#navtabs-equipo" data-toggle="tab">Equipo</a>
                  </li>
                  <li>
                    <a href="#navtabs-usuario" data-toggle="tab">Usuario</a>
                  </li>
                  <li>
                    <a href="#navtabs-checklist" data-toggle="tab">CheckList</a>
                  </li>
                  <li>
                    <a href="#navtabs-observacion" data-toggle="tab">Observaciones</a>
                  </li>
                </ul>{#/.NAV TABS#}
                {#TAB PANES#}
                <div class="tab-content"  style="padding-top: 20px;" >
                  <div class="tab-pane fade in active" id="navtabs-equipo">
                    <div class="col-md-6">
                      {% include 'equipo/equipo_nuevo_registrar_mantenimiento_navtabs_equipo.html.twig' %}
                    </div>
                  </div>
                  <div class="tab-pane fade" id="navtabs-usuario">
                    <div class="col-md-6">
                      {% include 'equipo/equipo_nuevo_registrar_mantenimiento_navtabs_usuario.html.twig' %}
                    </div>
                  </div>
                  <div class="tab-pane fade" id="navtabs-checklist">
                      {% include 'equipo/equipo_nuevo_registrar_mantenimiento_navtabs_checklist_so.html.twig' %}
                  </div>
                  <div class="tab-pane fade" id="navtabs-observacion">
                    <div class="col-md-6">
                     {% include 'equipo/equipo_nuevo_registrar_mantenimiento_navtabs_observacion.html.twig' %}
                    </div>
                  </div>
                </div>{#/.TAB PANES#}
                <div class="col-md-9">
                 <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
              </form>
            </div>
            <!-- /.col-lg-6 -->
          </div>
          <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->


{% endblock %}
