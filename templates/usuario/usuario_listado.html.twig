{# USUARIO LISTADO#}
{% extends "layout_app.html.twig" %}
{% block contenido_app %}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Buscar Usuarios</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% include 'mensaje_alerta.html.twig' %}{#MENSAJE#}
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Listado de los usuarios
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
            <div class="dataTable_wrapper">
              <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                  <tr>
                    <th>Item</th>
                    <th>Nombre</th>
                    <th>Indicador</th>
                    <th>Perfil</th>
                    <th>Acción</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>Item</th>
                    <th>Nombre</th>
                    <th>Indicador</th>
                    <th>Perfil</th>
                    <th>Acción</th>
                  </tr>
                </tfoot>
                <tbody>
{% for registro in usuarios %}
                  <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ registro.usuario_nombre }}</td>
                    <td>{{ registro.usuario_indicador }}</td>
                    <td>{{ registro.perfil_nombre }}</td>
                    <td>
                      <a href="{{ app.url_generator.generate('usuarioBuscar', {'usuarioId': registro.usuario_id}) }}">
                        <button type="button" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-edit"></span>Modificar</button>
                      </a>
                      <a href="{{ app.url_generator.generate('usuarioEliminar', {'usuarioId': registro.usuario_id}) }}" onclick="return confirm_delete();">
                        <button type="button" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-trash"></span>Eliminar</button>
                      </a>
                    </td>
                  </tr>
{% endfor %}
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
      </div>
      <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
</div>
<!-- /#page-wrapper -->
{% endblock %}
